@model LibraryMS.Users

@{
    ViewData["Title"] = "UserProfile";
}

<div>
    <h4><font color="blue">My Profile</font></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name:
        </dt>       
        <dd>
            @Html.DisplayFor(model => model.FirstName)
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            Email:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt>
            User Type:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserType)
        </dd>

        <dt>
            Address:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AddressStreet)
            @Html.DisplayFor(model => model.AddressCity)
            @Html.DisplayFor(model => model.AddressState)
            @Html.DisplayFor(model => model.AddressZipcode)
        </dd>
        <dt>
            Phone Number:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            Birthday:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Birthday)
        </dd>
        <dt>
            Membership Date:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MembershipDate)
        </dd>
    </dl>
</div>
