@using Microsoft.AspNetCore.Identity
@using LibraryMS.Views.Models

@using LibraryMS

@model LibraryMS.Views.Models.UserViewModel


<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.User)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastLoginAttempt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressStreet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressCity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressZipcode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressState)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birthday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MembershipDate)
                </td>
                <td>
                    @Html.ActionLink("Make Employee", "ChangeType", new { id = item.UserName, changeTo = 0 }) |
                    @Html.ActionLink("Make Admin", "ChangeType", new { id = item.UserName, changeTo = 3 }) |
                    @Html.ActionLink("Make Customer", "ChangeType", new { id = item.UserName, changeTo = 1 }) |
                    @Html.ActionLink("Make Faculty", "ChangeType", new { id = item.UserName, changeTo = 2 }) |
                </td>
            </tr>
        }
    </tbody>
</table>
